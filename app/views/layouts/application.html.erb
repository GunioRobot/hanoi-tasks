<!DOCTYPE html>
<html>
  <head>
    <title>HanoiTasks</title>
    <%= stylesheet_link_tag "scaffold","hot-sneaks/jquery-ui-1.8.6.custom" %>
    <%= stylesheet_link_tag "#{h(session[:theme])}/jquery-ui-1.8.6.custom"%>
    <%= javascript_include_tag 'jquery','jquery-ui','rails','application' %>
    <%= csrf_meta_tag %>
    <%= yield :head %>
<script type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-18227015-5']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

</script>
  </head>
  <body>
    <div id="language">
      <%=t(:language)%>: <%=select_tag :lang, options_for_select([["Italiano","it"],["English","en"]],I18n.locale)%>
    </div>
    <div id="theme-select">
      <%=t(:theme)%>: <%=select_tag :theme, options_for_select(AVAILABLE_THEMES,h(session[:theme]))%>
    </div>
    <div id="links">
      <ul>
        <li>
          <%= link_to t(:index), root_path%>
        </li>
        <li>
          <%= link_to t(:tasks), tasks_path%>
        </li>
        <li>
          <%= link_to t(:players), players_path%>
        </li>
        <li>
          <%= link_to t(:players_tasks), players_tasks_path%>
        </li>
        <li>
          <%= link_to t(:task_groups), task_groups_path%>
        </li>
        <li>
          <%= link_to t(:snort_log),"javascript:show_snort_log();"%>
        </li>
      </ul>
    
    </div>
    <div id="logo"></div>
    <%= yield %>
    <div id="snort_log" style="display:none">
    </div>
  </body>
</html>
